{
  "name": "snippeteer",
  "version": "0.1.0",
  "description": "It makes you more productive by searching and pasting your stored snippets.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "build --dir",
    "dist:all": "build --mac --linux --win --ia32",
    "dist:mac": "build --mac",
    "dist:win": "build --win",
    "dist:linux": "build --linux",
    "ship": "build --mac --linux --win --ia32 -p always",
    "ship:mac": "build --mac -p always",
    "ship:win": "build --win -p always",
    "ship:linux": "build --linux -p always"
  },
  "repository": "https://github.com/imRish/snippeteer.git",
  "keywords": [
    "productivity",
    "snippets",
    "text",
    "electron",
    "macOS",
    "windows",
    "linux"
  ],
  "author": {
    "name": "Rishabh Pandey",
    "email": "rishpandey@hotmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^1.8.4",
    "electron-builder": "^20.8.2",
    "eslint-config-google": "^0.9.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "electron-config": "^1.0.0",
    "electron-is-dev": "^0.3.0",
    "electron-updater": "^2.21.8",
    "fuzzy-search": "^2.0.1",
    "lru-cache": "^4.1.2",
    "nedb": "^1.8.0",
    "npm": "^5.8.0",
    "robotjs": "latest"
  },
  "build": {
    "appId": "snippeteer",
    "mac": {
      "category": "public.app-category.productivity",
      "extendInfo": {
        "LSBackgroundOnly": 1,
        "LSUIElement": 1
      }
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  }
}
